<header class="header">
        <div class="container">
            <%= image_tag @user.image_url,width: 100, height: 100, class: 'profile-image img-responsive pull-left' %>
            <div class="profile-content pull-left">
                <h1 class="name"><%=@user.nickname%></h1>
                <ul class="social list-inline">
                    <li><i class="fa fa-cog" aria-hidden="true"></i></li>
                </ul>
                <!-- #snsへのリンク -->
                <!-- <ul class="social list-inline">
                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                    <li>
                     <%= link_to (url_for_twitter(current_user)) do %>
                        <%= fa_icon "twitter"%>
                     <% end %>
                     </li>
                    <li class="last-item"><a href="#"><i class="fa fa-hacker-news"></i></a></li>
                </ul> -->
            </div><!--//profile-->
            <a class="btn btn-cta-primary pull-right" href="http://themes.3rdwavemedia.com/" target="_blank"><i class="fa fa-paper-plane"></i>メッセージ</a>
        </div><!--//container-->
    </header><!--//header-->

    <div class="container sections-wrapper">
        <div class="row">
            <div class="primary col-md-8 col-sm-12 col-xs-12">
                <section class="about section">
                    <div class="section-inner">
                        <h2 class="heading">About Me</h2>
                        <div class="content">
                            <%= @user.birthday %>
                            <%= @user.description %>
                        </div><!--//content-->
                    </div><!--//section-inner-->
                </section><!--//section-->

               <section class="latest section">
                    <div class="section-inner">
                        <h2 class="heading">Latest Events</h2>
                        <div class="content">


                            <hr class="divider" />
                            <div class="item row">
                                <a class="col-md-4 col-sm-4 col-xs-12" href="http://themes.3rdwavemedia.com/website-templates/responsive-bootstrap-theme-mobile-apps-atom/" target="_blank">
                                </a>
                                <div class="desc col-md-8 col-sm-8 col-xs-12">

                                </div><!--//desc-->
                            </div><!--//item-->
                        </div><!--//content-->
                    </div><!--//section-inner-->
                </section><!--//section-->

            </div><!--//primary-->
            <div class="secondary col-md-4 col-sm-12 col-xs-12">
                 <aside class="info aside section">
                    <div class="section-inner">
                        <h2 class="heading">Information</h2>
                        <div class="content">
                            <ul class="list-unstyled">
                                <li><span class="sr-only">Email:</span><%= mail_to @user.email %></li>
                            </ul>
                        </div><!--//content-->
                    </div><!--//section-inner-->
                </aside><!--//aside-->
            </div><!--//secondary-->
        </div><!--//row-->
    </div><!--//masonry-->
